<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".action"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginRight="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="PM Plan"
        android:textColor="#7D807D"
        android:textStyle="bold"
        android:id="@+id/pmPlan"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginVertical="5dp"
            android:text="Quaweekly"
            android:textColor="#7D807D"
            android:layout_below="@+id/pmPlan"
            android:id="@+id/pmPlanInfo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Equipment"
            android:textColor="#7D807D"
            android:textStyle="bold"
            android:id="@+id/equipment"
            android:layout_below="@+id/pmPlanInfo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginVertical="5dp"
            android:text="Equipment type - Equipment name"
            android:textColor="#7D807D"
            android:layout_below="@+id/equipment"
            android:id="@+id/equipmentInfo"/>

        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/equipmentInfo"
    android:id="@id/remarks">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Remarks"
            android:textColor="#7D807D"
            android:textStyle="bold"
            android:layout_below="@+id/equipmentInfo"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginTop="10dp"
            android:text="[ Edit ]"
            android:textColor="#1F93D0"
            android:textStyle="bold"
            android:id="@+id/remarks_edit"

            />

</LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginVertical="5dp"
            android:text="在工程房外等待零件中"
            android:textColor="#7D807D"
            android:layout_below="@+id/remarks"
            android:id="@+id/remarksInfo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/remarksInfo"
            android:id="@+id/maintenanceTechnician">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:text="Maintenance Technician(s)"
                android:textColor="#7D807D"
                android:textStyle="bold"
                android:layout_below="@+id/equipmentInfo"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:text="[ Edit ]"
                android:textColor="#1F93D0"
                android:textStyle="bold"
                android:id="@+id/mt_edit"

                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginVertical="5dp"
            android:text="Nil"
            android:textColor="#7D807D"
            android:layout_below="@+id/maintenanceTechnician"
            android:id="@+id/mtInfo"/>

    </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Service Date"
            android:textColor="#7D807D"
            android:textStyle="bold"
            android:id="@+id/serviceDate"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginVertical="5dp"
            android:text="YYYY-MM-DD hh-mm"
            android:textColor="#7D807D"
            android:layout_below="@+id/serviceDate"
            android:id="@+id/serviceDateInfo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/serviceDateInfo"
            android:id="@+id/equipmentRef">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Equipment Ref."
            android:textColor="#7D807D"
            android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:text="[ Edit ]"
                android:textColor="#1F93D0"
                android:textStyle="bold"
                android:id="@+id/equipmentRef_edit"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginVertical="5dp"
            android:text="Nil"
            android:textColor="#7D807D"
            android:layout_below="@+id/equipmentRef"
            android:id="@+id/equipmentRefInfo"/>

    </RelativeLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="Equipment Remarks"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/remarks_add"
        android:src="@drawable/btn_add_3"
        android:layout_gravity="center_vertical"

        />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="Check List"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:layout_marginHorizontal="5dp"
            android:text="P"
            android:textColor="@color/white"
            android:background="#1F93D0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : Photo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4.5dp"
            android:layout_marginHorizontal="5dp"
            android:text="Q"
            android:textColor="@color/white"
            android:background="#1F93D0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : QC Photo"/>
    </LinearLayout>
</LinearLayout>